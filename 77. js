javascript:(function(){    const input = prompt("Введите данные в формате: rowId1,comment1;rowId2,comment2");    if (input) {        const data = input.split(';').map(i => {            const [id, comment] = i.split(',').map(s => s.trim());            return { id, comment };        });        const findElem = s => document.querySelector(s);        const findChatBtn = id => findElem(`a[data-row_id="${id}"]`);        const findExcludeBtn = btn => btn.closest('div')?.querySelector(%27.move-to-prev-step-icon%27);        const highlight = elem => {            elem.style.border = %272px solid red%27;            elem.style.backgroundColor = %27yellow%27;        };        const insertComment = (btn, comment) => {            btn.click();            setTimeout(() => {                const inputBox = findElem(%27textarea.w-100.comment_textarea%27);                if (inputBox) {                    inputBox.value = comment;                    inputBox.dispatchEvent(new Event(%27input%27));                    const sendBtn = findElem(%27button.m-transparent-btn%27);                    if (sendBtn) {                        sendBtn.click();                        setTimeout(() => {                            findElem(%27a.comments-close%27)?.click();                            findExcludeBtn(btn)?.click();                            highlight(btn.closest(%27div%27));                            processNext();                        }, 500);                    }                }            }, 1000);        };        let index = 0;        const processNext = () => {            if (index < data.length) {                const { id, comment } = data[index++];                const chatBtn = findChatBtn(id);                if (chatBtn) insertComment(chatBtn, comment);            }        };        processNext();    }})();